<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="12dp"
    android:layout_gravity="center"
    card_view:cardCornerRadius="10dp"
    card_view:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvNamaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/blue_500"
            android:text="@string/nama_makanan"
            android:layout_marginTop="8dp"
            android:layout_marginStart="18dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="18dp"
            app:dividerInsetEnd="18dp"
            android:layout_marginTop="8dp"
            card_view:layout_constraintStart_toStartOf="@id/tvNamaMakanan"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/tvNamaMakanan"/>

        <LinearLayout
            android:id="@+id/layoutKarbohidrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            card_view:layout_constraintTop_toBottomOf="@id/divider"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tvLabelKarbohidrat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|start"
                android:textColor="@color/gray_700"
                android:text="Karbohidrat (g)"/>

            <TextView
                android:id="@+id/tvKarbohidrat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/gray_900"
                android:text="@string/jumlah_karbohidrat"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutKalori"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            card_view:layout_constraintTop_toBottomOf="@id/layoutKarbohidrat">

            <TextView
                android:id="@+id/tvLabelKalori"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|start"
                android:textColor="@color/gray_700"
                android:text="@string/kalori_kcal"/>

            <TextView
                android:id="@+id/tvKalori"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/gray_900"
                android:text="Jumlah Kalori"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGlukosa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            card_view:layout_constraintTop_toBottomOf="@id/layoutKalori"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tvLabelGlukosa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|start"
                android:textColor="@color/blue_500"
                android:text="@string/estimasi_glukosa_mg_dl"/>

            <TextView
                android:id="@+id/tvGlukosa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:gravity="center_vertical|end"
                android:textColor="@color/blue_500"
                android:text="Jumlah Glukosa"/>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>